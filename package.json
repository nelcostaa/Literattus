{
  "name": "literattus",
  "version": "0.1.0",
  "private": true,
  "description": "A social hub for book clubs - SaaS platform for managing reading communities",
  "keywords": ["book-club", "reading", "social", "saas", "next.js", "typescript"],
  "author": "Literattus Team",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "typeorm-ts-node-esm migration:generate -d src/lib/database/data-source.ts",
    "db:migrate": "typeorm-ts-node-esm migration:run -d src/lib/database/data-source.ts",
    "db:revert": "typeorm-ts-node-esm migration:revert -d src/lib/database/data-source.ts"
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typeorm": "^0.3.20",
    "mysql2": "^3.9.0",
    "reflect-metadata": "^0.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "lucide-react": "^0.376.0",
    "@radix-ui/react-slot": "^1.0.2",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.3.0",
    "zod": "^3.23.0",
    "bcryptjs": "^2.4.3",
    "@types/bcryptjs": "^2.4.6",
    "jsonwebtoken": "^9.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "axios": "^1.6.8"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "ts-node": "^10.9.2",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.0.0"
  }
}
