#!/bin/bash
# Stop Literattus services
# Usage: ./scripts/stop

source "$(dirname "$0")/common.sh"
goto_project_root

echo "ğŸ›‘ Stopping Literattus..."
DOCKER_COMPOSE_CMD=$(get_docker_compose_cmd)

sudo $DOCKER_COMPOSE_CMD down --remove-orphans

if [ $? -eq 0 ]; then
    echo "âœ… Server stopped successfully!"
    echo ""
    echo "ğŸ’¡ To start again: ./scripts/start"
else
    echo "âŒ Failed to stop server"
    exit 1
fi

