# Database Configuration - AWS RDS MySQL
DATABASE_URL=mysql+pymysql://admin:password@your-rds-endpoint.amazonaws.com:3306/literattus
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=3306
DB_NAME=literattus
DB_USER=admin
DB_PASSWORD=your_secure_password

# Application Configuration
APP_NAME=Literattus
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=True
API_PREFIX=/api

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Security & Authentication
SECRET_KEY=your-secret-key-min-32-characters-long-for-jwt
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Google Books API
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@literattus.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=../public/uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

